@page "/Productos/Nuevo"

<style>
    body {
        background-color: slategray;
    }
</style>

<EditForm Model= "@products">
    <DataAnnotationsValidator />
  <h3> Nuevo Producto</h3>
<br />


<div class="form-group row">
    <label for="Codigo" class="col-sm-2 col-form-label">
        Codigo
    </label>
    <div class="col-sm-10">

        <InputText id="Codigo" class="form-control" placeholder="Codigo" @bind-Value="products.Codigo" />
        <ValidationMessage For="@(()=>products.Codigo)" />
    </div>
</div>

<div class="form-group row">
    <label for="Descripcion" class="col-sm-2 col-form-label">
        Descripcion
    </label>
    <div class="col-sm-10">

        <InputText id="Descripcion" class="form-control" placeholder="Descripcion" @bind-Value="products.Descripcion" />
        <ValidationMessage For="@(()=>products.Descripcion)" />
    </div>
</div>


<div class="form-group row">
    <label for="Precio" class="col-sm-2 col-form-label">
        Precio
    </label>
    <div class="col-sm-10">

        <InputNumber id="Precio" class="form-control" placeholder="Precio" @bind-Value="products.Precio" />
        <ValidationMessage For="@(()=>products.Precio)" />
    </div>
</div>

<div class="form-group row">
    <label for="Existencia" class="col-sm-2 col-form-label">
        Existencia
    </label>
    <div class="col-sm-10">

        <InputNumber id="Existencia" class="form-control" placeholder="Existencia" @bind-Value="products.Existencia" />
        <ValidationMessage For="@(()=>products.Existencia)" />
    </div>
</div>

<div class="form-group row">
    <p>
        <input type="submit" class="btn-toolbar btn-primary" value="Guardar" @onclick="Guardar" />
        <input type="submit" class="btn-toolbar btn-danger" value="Cancelar" @onclick="Cancelar" />

    </p>

</div>

</EditForm>