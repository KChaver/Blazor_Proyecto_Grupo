@page "/Productos"
<style>
    body {
        background-color: slategray;
    }
</style>

<h3>Lista de Productos</h3>
<div class"form-group row">

    <div class="col-sm-2">

        <a href="/Productos/Nuevo" class="btn btn-primary"> Nuevo Producto</a>
    </div>
</div>

@if (productosLista == null)
{
    <div class="spinner"></div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Código</th>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Existencia</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var products in productosLista)
            {
                <tr>
                    <td>@products.Codigo</td>
                    <td>@products.Descripcion</td>
                    <td>@products.Precio</td>
                    <td>@products.Existencia</td>
                    <td> 
                        <a  class="btn btn-success" href="@($"/Productos/EditarProducto/{products.Codigo}")">Editar</a>
                    </td>
                     
                </tr> 

            }
        </tbody>
    </table>
}
